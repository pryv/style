{
  "name": "pryv-style",
  "version": "2.0.0",
  "description": "Pryv style assets: reference CSS, JS and media files (based on Bootstrap).",
  "main": "scss/main.scss",
  "scripts": {
    "setup": "sh scripts/setup.sh",
    "style": "node-sass scss/main.scss | postcss --use autoprefixer -o dist/pryv2.css",
    "style-min": "node-sass scss/main.scss --style compressed | postcss --use autoprefixer -o dist/pryv2.min.css",
    "copy-assets": "cp -r src/* ./dist/; cp ./node_modules/bootstrap/dist/js/bootstrap.min.js dist/bootstrap4.min.js",
    "build": "npm-run-all --parallel style style-min copy-assets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pryv/style.git"
  },
  "keywords": [
    "pryv",
    "style",
    "css",
    "bootstrap"
  ],
  "author": "Pryv S.A.",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/pryv/style/issues"
  },
  "homepage": "https://github.com/pryv/style#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2"
  },
  "dependencies": {
    "bootstrap": "^4.5.2"
  }
}
